<div class="container">
    <div class="row">
        <div class="col col-sm-6 col-sm-offset-3">
            <p id="notice"><%= notice %></p>

            <p>
              <strong>Owner:</strong>
              <%= @listing.user.first_name %> <%= @listing.user.last_name %>
            </p>

            <p>
              <strong>Description:</strong>
              <%= @listing.description %>
            </p>

            <p>
              <strong>Address:</strong>
              <%= @listing.address %>
            </p>

            <p>
              <strong>Num of bedrooms:</strong>
              <%= @listing.num_of_bedrooms %>
            </p>

            <p>
              <strong>Num of guests:</strong>
              <%= @listing.num_of_guests %>
            </p>

            <p>
              <strong>Name:</strong>
              <%= @listing.name %>
            </p>



            <div>
            <%# byebug %>
                <% @listing.images.each_with_index do |image, index| #grab the index %>
                    <%= image_tag(image.url) %>
                    <% link_to "Delete", listing_image_path(@listing, index), :method => :delete, data: { confirm: "Are you sure you want to delete this image?" } %>
                <% end %>
            </div>

        </div>
    </div>
</div>

<% if (@listing.user.id == current_user.id) || current_user.moderator? || current_user.superadmin? %>
  <%= link_to 'Edit', edit_listing_path(@listing) %> |
<% end %>
  <%= link_to 'Back', listings_path %>
