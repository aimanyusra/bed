<!-- Banner header -->
<div class="main-search-container">
	<div class="main-search-inner">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h1>Find nearby beds</h1>
					<p>Discover top rated establishments and more.</p>
					<%= link_to 'Learn More', listings_path, :class => 'btn btn-default btn-lg' %>
				</div>			
			</div>
		</div>
	</div>
</div>

<!-- content -->
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h3 class="headline centered margin-top-75">
				Popular Bedrooms <br>
				<span>Browse <i>the most desirable</i> properties</span>
			</h3>
		</div>
	</div>
</div>

<!-- Carousel -->

<div class="carousel-container margin-top-25">
	<div class="container">
		<div class="row">
			<div class="responsive slide carousel">
				<% @listing.shuffle.each do |x| %>
					<%if x.listing_photos.first != nil %>
					<div><a href= "/listings/<%= x.id %>" target="_blank" class="img"><%= image_tag(x.listing_photos.sample.image.list, :class => "carousel-img")%></a>
						<a href= "/listings/<%= x.id %>"><div class="slide-caption"><h5><%= x.name %></h5></div></a><h5 class="price">RM<%= x.price %></h5></div>
					<%end%>
				<% end %>
			</div>
		</div>
	</div>
</div>