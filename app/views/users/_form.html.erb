<div class="container">
	<div class="row">
		<div class="col col-sm-4">
			<div class="text-field">
			  <%= form.text_field :email, label: "Email:", type: 'email' , placeholder: "Email", required: true %>
			</div>

			<div class="text-field">
			  <%= form.text_field :first_name %>
			</div>

			<div class="text-field">
			  <%= form.text_field :last_name %>
			</div>

			<div class="text-field">
			  <%= form.text_field :age %>
			</div>

			<div class="text-field">
			  <%= form.text_field :gender %>
			</div>			

			<div class="password-field">
			  <%= form.password_field :password %>
			</div>			

			<div class="text-field">
			  <%= form.file_field :avatar %>
			</div>

			<label>
		      <%= form.check_box :remove_avatar %>
		      Remove avatar
		    </label>

		</div>
	</div>
</div>

