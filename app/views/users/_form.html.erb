<div class="container">
	<div class="row">
		<div class="col col-sm-4">
			<div class="text-field">
			  <%= form.text_field :email, type: 'email' , placeholder: "Email" %>
			</div>

			<div class="text-field">
			  <%= form.text_field :first_name %>
			</div>

			<div class="text-field">
			  <%= form.text_field :last_name %>
			</div>

			<div class="text-field">
			  <%= form.text_field :age %>
			</div>

			<div class="password-field">
			  <%= form.password_field :password %>
			</div>
		</div>
	</div>
</div>

