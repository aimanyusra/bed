<p id="notice"><%= notice %></p>

	<div class="row">
		<div class="text-center">
		<p>
			  <%= image_tag @user.avatar.thumb, class: "img-circle" %>

			<strong><%= @user.first_name %> <%= @user.last_name %></strong>			  
			</p>
				<% if current_user.id == @user.id %>
		<%= link_to 'Edit Profile', edit_user_path %>
	<% end %>

		</div>
	</div>

	<% if current_user.id == @user.id %>
		<div class="row">
			<div class="text-center">
				<h1>Your bookings:</h1>
			</div>
		</div>
	<% else %>
		<div class="row">
			<div class="text-center">
				<h1><%= @user.first_name %>'s bookings</h1>
			</div>
		</div>
	<% end %>

<!-- Carousel -->

<div class="carousel-container margin-top-25">
	<div class="container">
		<div class="row">
			<div class="responsive slide carousel">
				<% @bookings.each do |x| %>
					<% x.listing.listing_photos.limit(1).each do |y| %>
						<div>
							<a href= "/bookings/<%= x.id %>" target="_blank" class="img"><%= image_tag(y.image.list, :class => "carousel-img")%></a>
							<a href= "/bookings/<%= x.id %>"><div class="slide-caption"><h5><%= x.listing.name %></h5></div></a><h5 class="price">RM<span class="highlight-red"><%= x.listing.price %></span>/night</h5>
						</div>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>

	<% if current_user.id == @user.id %>
		<div class="row">
			<div class="text-center">
				<h1>Your listings:</h1>
			</div>
		</div>
	<% else %>
		<div class="row">
			<div class="text-center">
				<h1><%= @user.first_name %>'s listings</h1>
			</div>
		</div>
	<% end %>


	<!-- Carousel -->

<div class="carousel-container margin-top-25">
	<div class="container">
		<div class="row">
			<div class="responsive slide carousel">
				<% @listings.each do |x| %>
					<% x.listing_photos.limit(1).each do |y| %>
						<div>
							<a href= "/listings/<%= x.id %>" target="_blank" class="img"><%= image_tag(y.image.list, :class => "carousel-img")%></a>
							<a href= "/listings/<%= x.id %>"><div class="slide-caption"><h5><%= x.name %></h5></div></a><h5 class="price">RM<span class="highlight-red"><%= x.price %></span>/night</h5>
						</div>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>

</div>






